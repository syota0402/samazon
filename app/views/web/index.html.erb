<div class="row">
  <div class="col-2">
    <%= render partial: "layouts/sidebar", locals: { categories: @categories, major_category_names: @major_category_names } %>
  </div>
    <div class="col-9">
      <h1>おすすめ商品</h1>
      <div class="row">
        <% @recommended_products.each do |recommended_product| %>
        <div class="col-4">
          <%= link_to product_path(recommended_product) do %>
            <% if recommended_product.image.attached? %>
              <%= image_tag recommended_product.image, class: "img-thumbnail" %>
            <% else %>
              <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
            <% end %>
          <% end %>
          <div class="row">
            <div class="col-12">
              <p class="samazon-produvt-level mt-2">
                <%= recommended_product.name %>
                <label>￥<%= recommended_product.price %>
              </p>
            </div>
          </div>
        </div>
        <% end %>

      </div>

    <h1>新着商品</h1>
    <div class="row">
      <% @recently_products.each do |recently_product| %>
      <div class="col-3">
        <%= link_to product_path(recently_product) do %>
          <% if recently_product.image.attached? %>
            <%= image_tag recently_product.image, class: "img-thumbnail" %>
          <% else %>
            <%= image_tag "/images/dummy.png", class: "img-thumbnail" %>
          <% end %>
        <% end %>
        <div class="row">
          <div class="col-12">
            <p class="samazon-product-level mt-2">
              <%= recently_product.name %>
              <label>￥<%= recently_product.price %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>